<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h1 {
      margin-inline: auto;
    }

    .wrapper {
      height: 100vh;
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 30px;
    }

    .card {
      background-color: gray;
      border: 1px solid #000;
      border-radius: 8px;
      width: 50vw;
      padding: 24px;
    }
  </style>
  <title>Tarefa 01</title>
</head>
<body>
  <div class="wrapper">
  <h1>Bancos - Tarefa 01</h1>

    <% banks.forEach(bank => { %>
      <div class="card">
        <h2><%= bank.compe %> - <%= bank.shortName %></h2>
        <p><%= bank.document %>, <%= bank.type %></p>
        <a href="<%= bank.url %>" target="_blank"><%= bank.url %></a>
      </div>
    <% }); %>
  </div>
</body>
</html>
